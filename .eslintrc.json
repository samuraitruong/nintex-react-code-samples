{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console": "warn",
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "react/jsx-filename-extension": 0,
        "react/require-default-props": 0
    },
    "overrides": [
        {
            "files": "src/**/*.js",
            "excludedFiles": "*.test.js"
        }
    ]
}